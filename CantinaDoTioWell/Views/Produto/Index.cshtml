@model CantinaDoTioWell.Controllers.ClienteController

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    @*<script src="JavaScript1.js"></script>*@
    <title>Formulário de Cadastro de Produto</title>
</head>
<body>
    @using (Html.BeginForm("InserirProdutos", "Produto"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cadastro de Produto</h4>
            <hr />

            <p class="nome">
                <input type="text" id="nomeid" placeholder="Nome do produto" required="required" name="nome" />
                <label for="nome">Nome</label>
            </p>

            <p class="fone">
                <input type="text" id="precoid" placeholder="R$ 0,00" name="preco" />
                <label for="preco">Preço</label>
            </p>
            <p>
                <input type="number" id="quantidaedid" placeholder="0" name="quantidade" />
                <label for="quantidade">Quantidade em estoque</label>
            </p>


            <p class="submit">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </p>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Voltar", "Index", "Home")
    </div>
</body>
</html>
